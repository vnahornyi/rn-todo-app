{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": ["src"]
}
